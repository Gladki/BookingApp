<%- model_class = Przystanek -%>
<div class="span12">

<div class="page-header">
  <blockquote><p><big>Przystanek numer: <%= params[:id] %></big></p></blockquote>
</div>
</div>
<div class="span12">

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nazwa) %>:</strong></dt>
  <dd><%= @przystanek.nazwa %></dd>
</dl>
</div>
<div class="span12">

<div class="form-actions">
<%= link_to raw("<i class=\"icon-list\"></i> Lista"),
              przystaneks_index_path, :class => 'btn btn-warning'  %>
  <%= link_to raw("<i class=\"icon-edit\"></i> Edytuj"),
              edit_przystanek_path(@przystanek), :class => 'btn btn-success' %>
  <%= link_to raw("<i class=\"icon-remove\"></i> Usuń"),
              przystanek_path(@przystanek),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Jesteś pewien?')) },
              :class => 'btn btn-danger' %>
</div>
</div>

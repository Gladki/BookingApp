<%- model_class = Rezerwacja -%>
<div class="span12">
<div class="page-header">
    <blockquote><p><big>Rezerwacja: BT/<%= params[:id] %>/<%= Rezerwacja.find_by_id(params[:id]).created_at.year %></big></p></blockquote>
</div>
</div>

<dl class="dl-horizontal">
  <dt><strong>Wycieczka:</strong></dt>
  <dd><%= FindWycieczkaByID(@rezerwacja.nazwa) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:imie) %>:</strong></dt>
  <dd><%= @rezerwacja.imie %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nazwisko) %>:</strong></dt>
  <dd><%= @rezerwacja.nazwisko %></dd>
  <dt><strong>Numer telefonu:</strong></dt>
  <dd><%= @rezerwacja.nrtelefonu %></dd>
  <dt><strong>Data urodzenia:</strong></dt>
  <dd><%= @rezerwacja.dataUrodzenia %></dd>
</dl>
<div class="span12">
<div class="form-actions">
  <%= link_to raw("<i class=\"icon-list\"></i> Lista"),
              rezerwacjas_index_path, :class => 'btn btn-warning'  %>
  <%= link_to raw("<i class=\"icon-edit\"></i> Edytuj"),
              rezerwacja_edytuj_path(@rezerwacja), :class => 'btn btn-success' %>
  <%= link_to raw("<i class=\"icon-user\"></i> Dodaj"),
  nowa_osoba_path(@rezerwacja), :class => 'btn btn-primary' %>
  <%= link_to raw("<i class=\"icon-remove\"></i> Usuń"),
              rezerwacja_path(@rezerwacja),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Jesteś pewien?')) },
              :class => 'btn btn-danger' %>

</div>
</div>

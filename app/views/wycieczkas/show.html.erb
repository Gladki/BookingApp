<%- model_class = Wycieczka -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  
  <dt><strong>Miejsce:</strong></dt>
  <dd><%= @wycieczka.nazwa %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data) %>:</strong></dt>
  <dd><%= @wycieczka.data.strftime('%d-%m-%Y r.') %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              wycieczkas_index_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_wycieczka_path(@wycieczka), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              wycieczka_path(@wycieczka),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'JesteÅ› pewien?')) },
              :class => 'btn btn-danger' %>
</div>

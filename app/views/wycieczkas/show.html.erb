<%- model_class = Wycieczka -%>
<div class="span12">

<div class="page-header">
   <blockquote><p><big><p><%=t '.title', :default => model_class.model_name.human %></big></p></blockquote>
</div>
</div>
<div class="span12">

<dl class="dl-horizontal">
  
  <dt><strong>Miejsce:</strong></dt>
  <dd><%= @wycieczka.nazwa %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data) %>:</strong></dt>
  <dd><%= @wycieczka.data.strftime('%d-%m-%Y r.') %></dd>
</dl>
</div>
<div class="span12">

<div class="form-actions">
<%= link_to raw("<i class=\"icon-list\"></i> Lista"),
              wycieczkas_index_path, :class => 'btn btn-warning'  %>
  <%= link_to raw("<i class=\"icon-edit\"></i> Edytuj"),
              edit_wycieczka_path(@wycieczka), :class => 'btn btn-success' %>
  <%= link_to raw("<i class=\"icon-remove\"></i> Usuń"),
              wycieczka_path(@wycieczka),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Jesteś pewien?')) },
              :class => 'btn btn-danger' %>
</div>
</div>
